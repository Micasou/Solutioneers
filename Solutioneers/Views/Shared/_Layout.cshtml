<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Solutioneers</title>

    <!--begin fullpage dependencies-->
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.fullPage.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/headersheet.css" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>

    <!--[if IE]>
        <script type="text/javascript">
             var console = { log: function() {} };
        </script>
    <![endif]-->

    <script src="../../Scripts/SnapScr/jquery.min.js"></script>
    <script src="../../Scripts/SnapScr/jquery-ui.min.js"></script>


    <script type="text/javascript" src="../../Scripts/SnapScr/jquery.fullPage.js"></script>
    <script type="text/javascript" src="../../Scripts/SnapScr/examples.js"></script>

    <script type="text/javascript">
		$(document).ready(function() {
			$('#fullpage').fullpage({
				sectionsColor: ['#C63D0F', '#1BBC9B', '#7E8F7C'],
				css3: false,						//required for individual div scrolling
				normalScrollElements: '.Content',	//required for individual div scrolling
			});
		});
    </script>
    <!--end fullpage dependancies-->

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")





</head>
<body>
    <!-- following is the nav bar-->
    

    <div style="height: 80vh"> <!--1. We need to make this 30vh a variable that will change based on screen size. responsive stuff dawgs
                                                                             2. we need to be able to scroll down if the row is larger than alloted size.
                                                                             3. We need a preview of the bottom snap shop
                                                                             -->
        @RenderBody()
    </div>

    <footer>
        <p class="text-center">&copy; @DateTime.Now.Year - Solutioneers</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
   
</body>
</html>