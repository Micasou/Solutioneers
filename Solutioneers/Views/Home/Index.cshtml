@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="column-20 activity-list">
        <h2 class="indent">Activity</h2>
        <a class="btn btn-link">Activity Feed</a>
        <a class="btn btn-link disabled">Open Cards</a>
        <a class="btn btn-link disabled">Saved Cards</a>
        <h2>Subscriptions</h2>
        <div class="row">
            <div class="frame frame-size-small frame-circle">
                <img src="http://lorempixel.com/36/36/cats" />
            </div>
            <p>Channel</p>
            <i class="notification-bubble">2</i>
        </div>
    </div>
    <div class="column-80 activity-board"></div>
</div>

<div class="column">
    <div class="container">
        <div class="row row-centered" style="width:100%;">
            <div class="row">
                <a class="btn btn-link">hot</a>
                <a class="btn btn-link">new</a>
                <a class="btn btn-link">top rated</a>
            </div>
            <div class="row">
                <h1>search</h1>
                <input class="message-input" type="text" />
                <a class="btn btn-primary">search</a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row browse-results">
            <div class="wrap-group">
                <div class="wrap-group-item">
                    <a class="btn btn-link float-right">X</a>
                    <h3>Channel Name</h3>
                    <div class="column well">
                        <section class="row">
                            <p>This is a channel description that can totally be as long as necessary</p>
                        </section>
                        <div class="shadow-bottom"></div>
                        <section class="row">
                            <p># 1311</p>
                            <p>|  % 33 |</p>
                            <p>$ 203</p>
                        </section>
                    </div>
                </div>
            </div>
            <div class="column-33 browse-catagories">
                <h2>Filters</h2>
            </div>
        </div>
    </div>
</div>